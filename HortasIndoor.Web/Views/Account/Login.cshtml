@model HortasIndoor.Core.ViewModels.LoginCredentialsViewModel;
@{
}


@if(ViewBag.Token != null) {
    <p>@ViewBag.Token</p>
}


<h3>Faça Login</h3>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
        <div class="mb-3">
        @Html.Label("Username", "Username:", new { @class = "form-label" })
        @Html.TextBox("Username", Model?.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger"})
        </div>
        <div class="mb-3">
        @Html.Label("Password", "Password:", new { @class = "form-label" })
        @Html.Password("Password", Model?.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <input class="btn btn-primary" type="submit" value="Enviar" />
}