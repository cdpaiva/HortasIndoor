@model HortasIndoor.Core.ViewModels.PhotoViewModel;
@{
}

<h1>Adicionar Nova Foto</h1>

<form id="addPhoto" asp-action="UploadPhoto" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Description" class="control-label">Descrição</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" type="file" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group mt-1 mb-1">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>
