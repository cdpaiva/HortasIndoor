@model HortasIndoor.Core.ViewModels.PhotoViewModel;
@{
}

        <div class="d-flex justify-content-end">
            <button id="toogleAddPhotoBtn" class="btn btn-primary mb-2">Adicionar Nova Foto</button>
        </div>

        <form id="addPhoto" asp-action="UploadPhoto" enctype="multipart/form-data" method="post">

            @*<input asp-for="Id" type="hidden" class="form-control" />*@
            @*<input asp-for="AccountId" type="hidden" class="form-control" />*@
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group mt-1 mb-1">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
