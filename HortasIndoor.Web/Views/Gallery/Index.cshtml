@model HortasIndoor.Core.ViewModels.GalleryViewModel;
@{
}
<div class="row">
    <div class="col-3">
        <p class="text-secondary fs-6 mb-0">Username</p>
        <p class="fs-5">@Model.UserName</p>
        <p class="text-secondary fs-6 mb-0">E-Mail</p>
        <p class="fs-5">@Model.Email</p>
        @if (!String.IsNullOrEmpty(Model.Localizacao))
        {
            <p class="text-secondary fs-6 mb-0">Localização</p>
            <p class="fs-5">@Model.Localizacao</p>
        }
        <hr />
        <a href="/Gallery">Galeria</a>
        <a href="/Profile/Edit">Editar perfil</a>
    </div>
    <div class="col-9">
        <h1>Galeria</h1>
        <div class="mb-2">
            <a href="/Gallery/New">Adicionar Nova Foto</a>
        </div>
        @if( Model.Photos != null)
        {
            <div class="container">
                <div class="row row-cols-2 gy-2">
            @foreach(var photo in Model.Photos)
            {
                <div class="col">
                    <img src=@String.Format("data:image;base64,{0}",@photo.Bytes) alt="@photo.Description" width="150" height="150">
                    <div>
                        <a asp-controller="Gallery" asp-action="Details" asp-route-id="@photo.Id">@photo.Description</a>
                    </div>
                </div>
            }
            </div>
        </div>
        } else {
            <p>Nenhuma foto na galeria</p>
        }
    </div>
</div>

<script src="~/js/hideForm.js" type="text/javascript"></script>
